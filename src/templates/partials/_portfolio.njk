<section class="portfolio">
    <div class="container">
        <div class="portfolio__caption">
            {{  captionItem(title = 'Portfolio', desc = 'This is what weâ€™ve been working on') }}
        </div>
    </div>
    <ul class="portfolio__list-btn filter-button-group">
        {% set items = ["Web", "Digital Art", "Illustration", "Branding", "All"] %}
        {% for item in items %}
            <li class="portfolio__bullet">
                {% if not loop.last %}
                    <button class="portfolio__bullet-btn" data-filter=".{{ item | lower | replace(' ', '-')}}">{{ item }}</button>
                {% else %}
                    <button class="portfolio__bullet-btn" data-filter="*">{{ item }}</button>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
    <div class="portfolio__images grid">
    {% set images = [
        {
            category: 'web',
            caption:''
        },
        {
            category: 'digital-art',
            caption:''
        },
        {
            category: 'illustration',
            caption:''
        },
        {
            category: 'branding',
            caption:''
        },
        {
            category: 'web',
            caption:''
        },
        {
            category: 'web',
            caption:''
        },
        {
            category: 'web',
            caption:''
        },
        {
            category: 'all',
            caption:''
        }
    ]
    %}
        {% for item in images %}
            <div class="portfolio__item grid-item {{ item.category }}" data-category="{{ item.category }}">
                <a href="https://picsum.photos/800/600/?random&image={{ loop.index }}"
                       class="portfolio__link" data-fancybox="gallery" data-caption="{{ item.caption }}">
                        <span class="portfolio__img">
                                <img src="https://picsum.photos/200/250/?random&image={{ loop.index }}" alt="">
                        </span>
                        <span class="portfolio__detail">
                                <div class="portfolio__context">
                                    <p class="portfolio__title">
                                        Free Website PSD
                                    </p>
                                    <p class="portfolio__desc">
                                        Web
                                    </p>
                                </div>
                        </span>
                </a>
            </div>
        {% endfor %}
    </div>
